<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cvMovies"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivMoviePoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher_round"
            />
        <TextView
            android:id="@+id/tvMovieTitle"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivMoviePoster"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginLeft="@dimen/activity_small_margin"
            tools:text="Captain Ameriaca"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvOverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMovieTitle"
            android:layout_alignStart="@+id/tvMovieTitle"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:maxLength="200"
            tools:text="Captain America Overview"
            android:paddingBottom="@dimen/activity_vertical_margin"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>